{% extends 'base.html.twig' %}

{% block title %}Concept{% endblock %}

	{% block body %}	
		<section class="heightPage">

			{# affichage des messages flash #}
			{% for label, messages in app.flashes %}
				{% for message in messages %}
					<div class="alert alert-{{ label }}">{{ message }}</div>
				{% endfor %}
			{% endfor %}


			<div class="container-fluid formBackG">
				<div class="row justify-content-center">
					<div class="col-12 col-md-4 form-group marginForm">
						<h3 class="formTitle text-center">Ajouter ou modifier le concept</h3>

						{# d√©but du formulaire d'ajout ou modif de concept #}
						{{ form_start(form) }}

						<div class="form-group">{{ form_row(form.titleConcept, {'attr':{'class':'form-control formInput'}}) }}</div>
						<div class="form-group">{{ form_row(form.contentConcept, {'attr':{'class':'form-control formInput'}}) }}</div>
						<div class="form-group">{{ form_row(form.pictureConcept) }}</div>
						<button class="btn mb-3 mt-3 formButton" type="submit">Enregistrer</button>		
						
						{{ form_end(form) }}

					</div>
				</div>
			</div>
		</div>
	</div>


</section>

{% endblock %}