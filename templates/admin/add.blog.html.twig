{% extends 'base.html.twig' %}

{% block title %}Ajouter un blog{% endblock %}

{% block body %}

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {{ form_start(form) }}
    <section class="baseBackG">
    <div class="container-fluid formBackG">
        <div class="row justify-content-center">
            <div class="col-12 col-md-4 form-group marginForm">
                <h3 class="formTitle mb-5 mt-4 text-center"> Ajouter un blog</h3>

    <div class="form-group">{{ form_row(form.title, {'attr':{'class':'form-control formInput'}}) }}</div>
    <div class="form-group">{{ form_row(form.content, {'attr':{'class':'form-control formInput'}}) }}</div>
    <div class="form-group">{{ form_row(form.author, {'attr':{'class':'form-control formInput'}}) }}</div>
    <div class="form-group">{{ form_row(form.picture_blog) }}</div>
    <button class="btn mb-3 mt-3 formButton" type="submit">Ajouter</button>

                </div>
    {{ form_end(form) }}
            </div>
        </div>
        </section>

{% endblock %}