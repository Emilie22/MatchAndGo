{% extends 'base.html.twig' %}

{% block title %}Modification Utilisateur{% endblock %}

{% block body %}	

	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}
	{{ form_start(form) }}
	<div class="container">

		<div class="row justify-content-center">
			<div class="col-12 col-md-4 form-group">

				<div class="form-group mt-3">
						{{ form_row(form.firstname, {'attr':{'class':'form-control  inputProfile'}}) }}
						{{ form_row(form.lastname, {'attr':{'class':'form-control  inputProfile'}}) }}
						{{ form_row(form.city, {'attr':{'class':'form-control  inputProfile'}}) }}
						{{ form_row(form.birthday, {'attr':{'class':'inputProfile'}}) }}
						{{ form_row(form.gender, {'attr':{'class':'form-control inputProfile'}}) }}
						{{ form_row(form.phone, {'attr':{'class':'form-control  inputProfile'}}) }}
						{{ form_row(form.picture, {'attr':{'class':'inputProfile mb-2 mr-5'}}) }}
						{{ form_row(form.description, {'attr':{'class':'form-control  inputProfile'}})  }}
						{{ form_row(form.countries, {'attr':{'class':'form-control  inputProfile'}}) }}
						{{ form_row(form.save, {'attr':{'class':'form-control mt-3 btn btnProfile'}}) }}
				</div>

			</div>			

		</div>
	{{ form_end(form) }}
	</div>
