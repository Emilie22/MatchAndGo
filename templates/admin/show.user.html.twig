{% extends 'base.html.twig' %}
{% block title %}Liste des utilisateurs{% endblock %}
	{% block body %}
<section class="baseBackG">
<div class="container bootstrap snippet">
    <div class="row">
        <div class="col-lg-12">
            <div class="main-box no-header clearfix">
                <div class="main-box-body clearfix ">
                    <div class="table-responsive">
                        <table class="table user-list">
                            <thead>
                                <tr>
                                <th><span>Nom</span></th>
                                <th><span>Prenom</span></th>
                                <th><span>Ville</span></th>
                                <th><span>Email</span></th>
                                <th>&nbsp;</th>
                                </tr>
                            </thead>
                            <tbody>
                            	{% for user in users %}
                                <tr>
                                    <td>
                                        <img src="https://bootdey.com/img/Content/user_2.jpg" alt="">
                                        <a href="{{ path('showProfile', {id: user.id}) }}" class="user-link">{{ user.firstname }}</a>
                                    </td>
                                    <td>
                                        <span class="label label-default">{{ user.lastname }}</span>
                                    </td>
                                    <td>
                                        <span class="label label-default">{{ user.city }}</span>
                                    </td>
                                    <td>
                                        <span class="label label-default">{{ user.email }}</span>
                                    </td>
                                    <td style="width: 20%;">
                                        <a href="{{ path('showProfile', {id: user.id}) }}" class="fas fa-search-plus">
                                        </a>
                                        <a href="{{ path('deleteUser', {id: user.id}) }}" class="fas fa-trash">
                                        </a>
                                    </td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</section>
{% endblock %}
