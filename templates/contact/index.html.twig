{% extends 'base.html.twig' %}

{% block title %}Nous Contacter{% endblock %}

{% block body %}

    {{ form_start(form) }}
    <div class="container">
    	<div class="row">
    		<div class="col-lg-8 col-lg-offset-2 text-center">
                <h2 class="margin-top-0 wow fadeIn">Nous contacter</h2>
                	<hr class="primary">
            </div>

    <div class="contact-form row">{{ form_row(form.name, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.email, {'attr':{'class':'form-control'}}) }}</div>
    <div class="form-group">{{ form_row(form.messageContact, {'attr':{'class':'form-control'}}) }}</div>


    {{ form_end(form) }}
    </div>



{% endblock %}
