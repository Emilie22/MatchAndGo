{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}

<div class="container mt-5">
    <h1 class="h3 font-weight-normal mt-5 mb-5 text-center">Se connecter</h1>
        <form class="form-group mt-3" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
                <div class="row justify-content-center"> 
                    <div class="col-12 col-md-4 connexion">
                        
                        <label class="mb-3 mt-3" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" placeholder="Email" required autofocus>
                        <label class="mb-3 mt-3" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Password" required>

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >

                    {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                #}
                    <div class="checkbox mb-3">
                        <label>
                            <input class="mr-3 mt-3" type="checkbox" name="_remember_me">Se souvenir de moi
                        </label>
                    </div>
               

                    <button class="mb-3 mt-3 btn btnConnexion" type="submit">
                        Connexion
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
