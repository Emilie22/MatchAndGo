{% extends 'base.html.twig' %}

{% block title %}Liste des blogs{% endblock %}

{% block body %}

	{# affichage des éventuels messages flash #}
	{% for message in app.flashes('success') %}
		<div class="alert alert-success">
			{{ message }}
		</div>
	{% endfor %}

<div class="row">

	{% for article in articles %}

		<div class="col-md-4">
			<img src="{{ asset('uploads/article/image/' ~ article.pictureblog) }}"  class="img-thumbnail">

			<h3>{{ article.title }}</h3>
			publié dans la catégorie le {{ article.datepost|date('d/m/Y') }} par {{ article.author }}
			<p>{{ article.content }}</p>	
		</div>

	{% endfor %}
	
	</div>

{% endblock %}
